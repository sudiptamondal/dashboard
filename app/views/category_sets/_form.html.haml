= form_for @category_set do |f|
  - if @category_set.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category_set.errors.count, "error")} prohibited this category_set from being saved:"
      %ul
        - @category_set.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :category_set_name
    = f.text_field :category_set_name
  .actions
    = f.submit 'Save'
